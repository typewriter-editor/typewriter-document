{
  "name": "@typewriter/document",
  "version": "0.8.0",
  "description": "An immutable text document format using Delta format broken into lines for optimized rendering.",
  "keywords": [
    "typewriter",
    "rich text editor",
    "wysiwyg",
    "delta"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "prepare": "npm run build",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "src": "src",
    "doc": "docs",
    "example": "examples",
    "test": "test"
  },
  "files": [
    "package.json",
    "README.md",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/typewriter-editor/typewriter-document.git"
  },
  "dependencies": {
    "@typewriter/delta": "^1.1.3"
  },
  "devDependencies": {
    "prettier": "^3.3.2",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0"
  }
}
