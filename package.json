{
  "name": "@typewriter/document",
  "version": "0.9.4",
  "description": "An immutable text document format using Delta format broken into lines for optimized rendering.",
  "keywords": [
    "typewriter",
    "rich text editor",
    "wysiwyg",
    "delta"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "svelte-package -i src",
    "prepare": "npm run build",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "license": "MIT",
  "directories": {
    "lib": "lib",
    "src": "src",
    "doc": "docs",
    "example": "examples",
    "test": "test"
  },
  "files": [
    "package.json",
    "README.md",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/typewriter-editor/typewriter-document.git"
  },
  "dependencies": {
    "@typewriter/delta": "^1.2.4"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.3.7",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^2.1.8"
  }
}
